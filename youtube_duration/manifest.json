{
  "manifest_version": 3,
  "name": "YouTube Playlist Duration",
  "version": "1.0",
  "description": "Calculates and displays the total duration of YouTube playlist videos (excluding live streams) directly on the YouTube UI.",
  "permissions": [],
  "host_permissions": [
    "*://*.youtube.com/playlist*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist?*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}